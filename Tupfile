include_rules

# Rules
: foreach $(CSRCS) $(CSRCS-y) |> !cc |>
: foreach $(CXXSRCS) $(CXXSRCS-y) |> !cxx |>
: *.o |> !ld |> osuar_control.elf

: osuar_control.elf |> !hex |>
: osuar_control.elf |> !bin |>
